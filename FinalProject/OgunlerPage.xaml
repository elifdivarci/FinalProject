<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.OgunlerPage"
             Title="Öğünler"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="Öğünler"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>
            
            <!-- Kahvaltı -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   HasShadow="True"
                   Padding="15">
                <Grid ColumnDefinitions="*,Auto,Auto" 
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="15"
                      RowSpacing="10">
                    
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Kahvaltı"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                    
                    <Label Grid.Row="1" Grid.Column="0"
                           x:Name="LabelKahvaltiKalori"
                           Text="0 kcal"
                           FontSize="16"
                           TextColor="#7F8C8D"
                           VerticalOptions="Center"/>
                    
                    <Image Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                           Source="cheese.png"
                           WidthRequest="80"
                           HeightRequest="80"
                           Aspect="AspectFit"/>
                    
                    <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                            Text="+"
                            FontSize="32"
                            WidthRequest="60"
                            HeightRequest="60"
                            CornerRadius="30"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            VerticalOptions="Center"
                            Clicked="OnKahvaltiClicked"/>
                </Grid>
            </Frame>

            <!-- Öğle -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   HasShadow="True"
                   Padding="15">
                <Grid ColumnDefinitions="*,Auto,Auto" 
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="15"
                      RowSpacing="10">
                    
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Öğle"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                    
                    <Label Grid.Row="1" Grid.Column="0"
                           x:Name="LabelOgleKalori"
                           Text="0 kcal"
                           FontSize="16"
                           TextColor="#7F8C8D"
                           VerticalOptions="Center"/>
                    
                    <Image Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                           Source="soup.png"
                           WidthRequest="80"
                           HeightRequest="80"
                           Aspect="AspectFit"/>
                    
                    <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                            Text="+"
                            FontSize="32"
                            WidthRequest="60"
                            HeightRequest="60"
                            CornerRadius="30"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            VerticalOptions="Center"
                            Clicked="OnOgleClicked"/>
                </Grid>
            </Frame>

            <!-- Akşam -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   HasShadow="True"
                   Padding="15">
                <Grid ColumnDefinitions="*,Auto,Auto" 
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="15"
                      RowSpacing="10">
                    
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Akşam"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                    
                    <Label Grid.Row="1" Grid.Column="0"
                           x:Name="LabelAksamKalori"
                           Text="0 kcal"
                           FontSize="16"
                           TextColor="#7F8C8D"
                           VerticalOptions="Center"/>
                    
                    <Image Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                           Source="dinner.png"
                           WidthRequest="80"
                           HeightRequest="80"
                           Aspect="AspectFit"/>
                    
                    <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                            Text="+"
                            FontSize="32"
                            WidthRequest="60"
                            HeightRequest="60"
                            CornerRadius="30"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            VerticalOptions="Center"
                            Clicked="OnAksamClicked"/>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>